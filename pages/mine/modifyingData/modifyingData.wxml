<form bindsubmit="formSubmit" class='modeData'>
  <view class='modify list'>
    <view class='item' bindtap='changeImg'>
      <text class='title'>头像</text>
     <image src='{{faceImg}}' class='avatar'></image>
    </view>
    <view class='item'>
      <text class='title'>昵称</text>
      <input name='name' type='text' placeholder='请输入昵称' value='{{nickname}}'/>
      
    </view>
   <view class='item'>
      <text class='title'>身份证号码</text>
      <input name='idNum' type='text' placeholder='请输入身份证号码' value='{{data.identity}}'/>
      
    </view>

    <view class='item'>
      <text class='title'>绑定手机号</text>
      <input name='telphone' type='text' placeholder='请输入您要绑定的手机号' value='{{data.phone}}'/>
    </view>
  </view>
<button  form-type="submit" class='submit'>提交</button>
</form>