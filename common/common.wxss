page {
  background: #f5f5f5;
  font-size: 30rpx;
  position: relative;
}

view, input, label, text, button, textarea {
  box-sizing: border-box;
}

.clearfix:after {
  content: "";
  display: table;
  height: 0;
  visibility: both;
  clear: both;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 160rpx;
  align-items: center;
  background: white;
  margin-bottom: 10rpx;
}

.section .item {
  width: 50%;
  text-align: center;
  border-right: 1px solid #89dafb;
}

.section .item:last-child {
  border-right: none;
}

.section .item {
  font-size: 42rpx;
  color: #13b6f7;
}

.section .item text {
  font-size: 24rpx;
  color: #999;
}

.sectionTitle {
  color: #13b6f7;
  height: 125rpx;
  line-height: 125rpx;
  background: #fff;
  padding-left: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.sectionTitle text {
  border-left: 2px solid #13b6f7;
  padding-left: 10rpx;
}

.list {
  background: #fff;
}

.list .item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  height: 125rpx;
  padding: 0 28rpx;
}

.mask {
  width: 100%;
  height: 100%;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  opacity: 0.8;
  display: block;
}